---
import { getCollection } from "astro:content";
import Container from "../ui/Container.astro";
import Heading from "../ui/Heading.astro";
import MissionIcon from "../icons/MissionIcon.astro";
const siteData = await getCollection("siteCollection");
const siteInfo = siteData[0].data;
const site = siteInfo;
const missions = site.missions;
---

<section id="mission" class="bg-info">
  <Container class="pt-20 pb-36" width="marginx">
    <Heading size="lg" class="text-center text-balance mb-10">
      {site.missionTitle}
    </Heading>

    <div
      class="grid place-content-center grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mx-auto"
    >
      {
        missions.map((mission) => (
          <div class="card shadow-none">
            <figure class="w-1/3 mx-auto">
              <MissionIcon icon={mission.icon} />
            </figure>
            <div class="w-0.5 h-14 bg-base-content mx-auto mt-2" />
            <div class="bg-base-100 rounded-4xl border-2 border-base-content card-body">
              <Heading fontweight="normal" class="text-justify" size="xs">
                {mission.text}
              </Heading>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</section>
