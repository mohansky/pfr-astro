---
import { getCollection } from "astro:content";
import Heading from "./Heading.astro";
import WaveDivider from "./WaveDivider.astro";
const siteData = await getCollection("siteCollection");
const siteInfo = siteData[0].data;
const site = siteInfo;
const source = site.intro[0];
---

<WaveDivider class="z-10" selectedColor="fill-info" />
<div class="relative bg-info py-20">
  <div class="pb-20">
    <Heading size="xl" class="text-center text-balance max-w-5xl mx-auto">
      {source}
      <!-- We work directly with fisherfolk to source invasive fish and turn them into healthy food for your pets. -->
    </Heading>
  </div>
</div>
<WaveDivider selectedColor="fill-base-100" />
