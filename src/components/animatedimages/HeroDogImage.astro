---
import { Image } from "astro:assets";
import dog from "@/assets/cooldogo.png";
---

<div
  class="image-container absolute bottom-0 w-full left-10 lg:-bottom-10 lg:left-150 lg:w-1/2 lg:h-2/3 z-10"
  id="dog-image-wrapper"
>
  <Image
    src={dog}
    alt="Paws for Rivers"
    title="Paws for Rivers" 
    width="1920"
    height="1080"
    id="animated-image"
    format="webp"
    quality={80}
  />
</div>

<script>
  import { animate } from "motion";
  function runAnimation() {
    const imageContainer = document.getElementById("dog-image-wrapper");

    if (imageContainer) {
      console.log("Found image container, setting up animation");

      imageContainer.style.transform = "translateY(200px)";
      imageContainer.style.opacity = "0";

      setTimeout(() => {
        console.log("Starting animation");
        animate(
          imageContainer,
          {
            y: [200, 0],
            opacity: [0, 1],
          },
          {
            duration: 4.5,
            type: "spring",
            bounce: 0.5,
            damping: 10,
            delay: 1.25,
          }
        );
      }, 100);
    } else {
      console.error("Image container not found");
    }
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", runAnimation);
  } else {
    runAnimation();
  }
</script>
