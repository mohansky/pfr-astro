---
import { Image } from "astro:assets";
import fish from "@/assets/bg-fish.svg";
---

<div
  class="image-container absolute bottom-0 z-0"
  id="dog-image-wrapper"
>
  <Image
    src={fish}
    alt="Animated image"
    width={1920}
    height={1080}
    id="animated-image"
    format="webp"
    quality={80}
    class="opacity-20"
    />
</div>

